import numpy as np


vector and its operations

vector addition

v1=np.array([1,2,3])
v2=np.array([4,5,6])
#vector addition
v3=v1+v2
v3

vector dot product

dot_product=np.dot(v1,v2)
print(dot_product)

matrix and its operations

matrix addition6

matrix1=np.array([[1,2],[3,4]])
matrix2=np.array([[1,2],[3,4]])
print(matrix1+matrix2)

matrix multiplication(element wise and dot product)

element_wise_mul=matrix1*matrix2
print(element_wise_mul)

dot_product=np.dot(matrix1,matrix2)
print(dot_product)

matrix Transpose

matrix_transpose=matrix1.T
print(matrix_transpose)

determinant of matrix

det_matrix1=np.linalg.det(matrix1)
print(det_matrix1)

inverse of matrix

inv_matrix1=np.linalg.inv(matrix1)
print(inv_matrix1)

eigen decomposition

eigen_value,eigen_vectors=np.linalg.eig(matrix1)
print("Eigen Value: \n",eigen_value)
print("Eigen Vectors: \n",eigen_vectors)

solve a system of linear equation

b=np.array([5,7])

ans=np.linalg.solve(matrix1,b)
print(ans)

Singular Value Decomposition(SVD)

U,S,Vt=np.linalg.svd(matrix1)
print("U matrix: \n",U)
print("Singular value: \n",S)
print("V Transpose matrix: \n",Vt)
